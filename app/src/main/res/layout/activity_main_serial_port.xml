<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/water_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_width10"
    tools:context="com.msht.watersystem.functionActivity.MainSerialPortActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/water_advertisement"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <com.msht.watersystem.widget.MyImgScrollViewPager
                    android:id="@+id/myvp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.msht.watersystem.widget.MyImgScrollViewPager>
                <ImageView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/advertisement_text"
                    android:src="@drawable/water_advertisement" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <io.vov.vitamio.widget.CenterLayout
        android:id="@+id/cideo_center_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        </SurfaceView>
    </io.vov.vitamio.widget.CenterLayout>
</RelativeLayout>
