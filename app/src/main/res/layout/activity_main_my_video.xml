<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functionActivity.MainMyVideoActivity">
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/custom_videoplayer_standard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/id_layout_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">
        <com.msht.watersystem.widget.BannerM
            android:id="@+id/id_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.msht.watersystem.widget.BannerM>
        <ImageView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:contentDescription="@string/ad_picture"
            android:src="@drawable/water_advertisement" />
        <TextView
            android:id="@+id/id_text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format24Hour="kk:mm"
        android:layout_marginTop="@dimen/margin_width10"
        android:layout_marginEnd="@dimen/margin_width10"
        android:layout_gravity="top|end"
        android:textColor="@color/color_red"
        android:textSize="@dimen/text_width12"/>
</FrameLayout>