<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/water_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_width15"
    tools:context="com.msht.watersystem.functionActivity.IcCardOutWaterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/water_background"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:background="@color/white">
            <!--<com.msht.watersystem.widget.BannerM
                android:id="@+id/id_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.msht.watersystem.widget.BannerM>-->
            <ImageView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/ad_picture"
                android:gravity="center"
                android:src="@drawable/water_advertisement" />
            <include layout="@layout/layout_water_quality_detection" />
        </FrameLayout>
        <View
            android:layout_width="@dimen/margin_width15"
            android:layout_height="match_parent"
            android:background="#00ffffff" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:background="@color/windows_color"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/id_re_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_width15">
                <TextView
                    android:id="@+id/id_text_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginTop="@dimen/margin_width40"
                    android:text="欢迎您"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_tv_cardno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width40"
                    android:layout_toRightOf="@+id/id_text_welcome"
                    android:layout_toEndOf="@+id/id_text_welcome"
                    android:text="189***28"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text_welcome"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width15"
                        android:layout_marginStart="@dimen/margin_width15"
                        android:text="余额："
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_width16" />

                    <TextView
                        android:id="@+id/id_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_width20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:text="元"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_width16" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/id_re_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/water_back_xh">
                <TextView
                    android:id="@+id/id_waster_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginTop="@dimen/margin_width20"
                    android:text="参考出水量"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width16" />
                <com.msht.watersystem.widget.LEDView
                    android:id="@+id/id_waster_yield"
                    android:layout_width="@dimen/margin_width200"
                    android:layout_height="@dimen/margin_width50"
                    android:layout_below="@+id/id_waster_status"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:background="@drawable/dark_green_bg"
                    android:padding="@dimen/margin_width6">
                </com.msht.watersystem.widget.LEDView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_waster_status"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width40"
                    android:layout_toRightOf="@+id/id_waster_yield"
                    android:gravity="center"
                    android:text="升"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width18" />
                <TextView
                    android:id="@+id/id_should_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_waster_yield"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginTop="@dimen/margin_width20"
                    android:text="应付金额"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width16"
                    android:visibility="gone" />

                <com.msht.watersystem.widget.LEDView
                    android:id="@+id/id_pay_amount"
                    android:layout_width="@dimen/margin_width200"
                    android:layout_height="@dimen/margin_width50"
                    android:layout_below="@+id/id_should_text"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:background="@drawable/dark_green_bg"
                    android:padding="@dimen/margin_width6"
                    android:visibility="gone">
                </com.msht.watersystem.widget.LEDView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_should_text"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width40"
                    android:layout_toRightOf="@+id/id_pay_amount"
                    android:gravity="center"
                    android:text="元"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width18"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/id_blackCard_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:drawableStart="@drawable/shape_oval_notice"
                    android:drawablePadding="@dimen/margin_width10"
                    android:layout_below="@+id/id_waster_yield"
                    android:layout_marginTop="@dimen/margin_width60"
                    android:textColor="@color/color_yellow"
                    android:textSize="@dimen/text_width16"
                    android:text="@string/black_card_tip"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:id="@+id/id_re_notices1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_width20">
                    <TextView
                        android:id="@+id/id_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_width15"
                        android:text="1、请点击"
                        android:textColor="@color/water_textcolor"
                        android:textSize="@dimen/text_width14" />

                    <Button
                        android:id="@+id/id_text4"
                        android:layout_width="@dimen/margin_width30"
                        android:layout_height="@dimen/margin_width30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_toRightOf="@+id/id_text3"
                        android:background="@drawable/shape_bluecircle_button"
                        android:text="灌装"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_width12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_toRightOf="@+id/id_text4"
                        android:text="按钮开始灌装"
                        android:textColor="@color/water_textcolor"
                        android:textSize="@dimen/text_width14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_text3"
                        android:layout_marginLeft="@dimen/margin_width15"
                        android:layout_marginTop="@dimen/margin_width30"
                        android:text="2、如要终止取水请再次刷卡"
                        android:textColor="@color/water_textcolor"
                        android:textSize="@dimen/text_width14" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:minHeight="@dimen/margin_width30">
                <TextView
                    android:id="@id/id_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width15"
                    android:text="请您在"
                    android:textColor="@color/water_textcolor"
                    android:textSize="@dimen/text_width12" />

                <TextView
                    android:id="@+id/id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width6"
                    android:layout_toRightOf="@id/id_text5"
                    android:layout_toEndOf="@+id/id_text5"
                    android:text="180"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@id/id_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width6"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_toRightOf="@id/id_time"
                    android:text="启动灌装或再次刷卡结账，否则扣款将无法返还"
                    android:textColor="@color/water_textcolor"
                    android:textSize="@dimen/text_width12" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
